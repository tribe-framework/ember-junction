<div class="w-100 mb-3" {{did-insert (fn @initEditorJS @module.input_slug @id)}} {{on 'click' this.saveEditorData}}>
	<div class="border border-1 border-dark w-100 py-3 px-n3" {{on 'keyup' this.saveEditorData}} id={{concat @type.slug "-" @module.input_slug "-" @id}}></div>
	<div class="d-flex justify-content-between">
		<button class="btn btn-sm btn-dark" type="button" {{on 'click' this.saveEditorData}}>Save {{@module.input_slug}}</button>
	  	<div class="form-text text-end text-dark">{{if @module.input_placeholder @module.input_placeholder (concat "Enter " @module.input_slug)}}</div>
	</div>
</div>