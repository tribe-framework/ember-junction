<div class="w-100 mb-3">
	<div class="border border-1 w-100 py-3 px-n3"
		id="{{concat @type.slug "-" @module.input_slug}}"></div>

	<div class="d-flex justify-content-end">
	  	<div class="form-text text-end">
	  		{{if @module.input_placeholder @module.input_placeholder (concat "Enter " @module.input_slug)}} {{if @module.input_required (html-safe "<span class=\"text-danger\">*</span>")}}
	  	</div>
	</div>
</div>
<div class="d-none" {{did-insert (fn this.cleanVarsOnNewModalOpen @module.input_slug)}}></div>